---
import { type CollectionEntry, getCollection, render } from 'astro:content';
import BlogPost from '../../layouts/BlogPost.astro';
import { PERSONAL_TAGS } from '@/constants';

export async function getStaticPaths() {
	const posts = await getCollection('pebbles');
	const isPersonal = import.meta.env.PUBLIC_TYPE === 'personal';

	return posts
	.filter((post) => isPersonal ? true : !post.data.tags.some((tag)=> {
		return PERSONAL_TAGS.includes(tag)
	}))
	.map((post) => ({
		params: { slug: post.id },
		props: post,
	}));
}

type Props = CollectionEntry<'pebbles'>;

const post = Astro.props as Props;
const { Content, headings } = await render(post);
const ogImage = `/pebbles/og/${post.id}.png`;

---

<BlogPost {...post.data} ogImage={ogImage} headings={headings} contentType="pebbles" slug={post.id}>
	<Content />
</BlogPost>
